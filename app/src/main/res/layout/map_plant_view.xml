<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/plant_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:id="@+id/text_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:id="@+id/plant_name_and_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff000000"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="Apple" />

                <TextView
                    android:id="@+id/planted_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff7f7f7f"
                    android:textSize="8sp"
                    tools:text="Planted time: Mon 22 Aug, 2020 at 10:00" />

                <TextView
                    android:id="@+id/waterings_remaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff7f7f7f"
                    android:textSize="8sp"
                    tools:text="Waterings remaining: #24" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff7f7f7f"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    tools:text="Status: Ready to water" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff7f7f7f"
                    android:textSize="8sp"
                    tools:text="Location: (51.72024, -1.23458)" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/water_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="4dp"
            android:layout_gravity="top|end"
            android:layout_weight="1"
            android:visibility="visible"
            app:srcCompat="@mipmap/water_notification_round" />

        <ImageView
            android:id="@+id/harvest_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="4dp"
            android:layout_gravity="top|end"
            android:layout_weight="1"
            android:visibility="invisible"
            app:srcCompat="@mipmap/harvest_notification_round" />

        <ImageView
            android:id="@+id/growing_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="4dp"
            android:layout_gravity="top|end"
            android:layout_weight="1"
            android:visibility="invisible"
            app:srcCompat="@mipmap/growing_notification_round" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
