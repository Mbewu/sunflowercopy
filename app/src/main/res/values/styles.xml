<resources>

    <!--    the base theme, things that aren't changed with day/night theming -->
    <style name="AppThemeBase" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorError">@color/sunflower_red_800</item>

        <item name="android:textColorLink">@color/hyperlinkColor</item>
        <item name="android:textColorLinkInverse">@color/hyperlinkVisitedColor</item>

        <item name="colorCamera">@color/colorCamera</item>
        <item name="colorHarvest">@color/sunflower_amber_500</item>
        <item name="colorWater">@color/colorWater</item>
        <item name="colorMaps">@color/sunflower_green_700</item>
        <item name="colorRemove">@color/sunflower_red_800</item>

    </style>

    <!-- Day application theme that is primarily used -->
    <style name="AppTheme" parent="AppThemeBase">

        <item name="colorPrimary">@color/sunflower_green_900</item>
        <item name="colorPrimaryDark">@color/sunflower_green_900</item>
        <item name="colorPrimaryVariant">@color/sunflower_green_700</item>

        <item name="colorAccent">@color/sunflower_amber_500</item>

        <item name="colorSecondary">@color/sunflower_amber_500</item>
        <item name="colorSecondaryVariant">@color/sunflower_yellow_400</item>

        <item name="android:textColorPrimary">@color/sunflower_black</item>
        <item name="android:textColorSecondary">@color/sunflower_white</item>
        <item name="android:textColorTertiary">@color/sunflower_white</item>

        <item name="android:colorBackground">@color/sunflower_green_700</item>
        <item name="colorSurface">@color/sunflower_white</item>
        <item name="colorOnPrimary">@color/sunflower_amber_500</item>
        <item name="colorOnSurface">@color/sunflower_black</item>


    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


