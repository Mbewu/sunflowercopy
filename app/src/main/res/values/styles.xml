    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="elevation">4dp</item>

    </style>

    <style name="Widget.Sunflower.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="title">@string/empty_string</item>
        <item name="colorControlNormal">?android:textColorTertiary</item>
        <item name="android:colorControlNormal">?android:textColorTertiary</item>
        <item name="android:actionMenuTextColor">@color/sunflower_black</item>
        <item name="android:textColorSecondary">@color/sunflower_white</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?android:textColorTertiary</item>
    </style>

    <style name="OverFlowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_options_circle</item>
    </style>


    <style name="CloseModeButton" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:src">@drawable/ic_back_circle</item>
    </style>

    <style name="UpButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:src">@drawable/ic_back_circle</item>
    </style>

    <style name="OverFlowButton.Theme" parent="AppTheme">
        <item name="actionOverflowButtonStyle">@style/OverFlowButton</item>
    </style>

    <style name="Widget.Sunflower.Toolbar.Map" parent="Widget.Sunflower.Toolbar">
        <item name="actionOverflowButtonStyle">@style/OverFlowButton</item>
        <item name="actionModeCloseButtonStyle">@style/CloseModeButton</item>
        <item name="actionButtonStyle">@style/UpButton</item>
    </style>

    <style name="Widget.Sunflower.Toolbar.Dark" parent="Widget.Sunflower.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?android:textColorTertiary</item>
        <item name="android:colorControlNormal">?android:textColorTertiary</item>

    </style>

    <style name="Widget.Sunflower.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/fab_margin</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
        <item name="borderWidth">@dimen/dimen_fab_border_0</item>
        <item name="tint">@color/sunflower_white</item>

    </style>


    <style name="Widget.Sunflower.Button" parent="Widget.MaterialComponents.Button">
    </style>

    <style name="Widget.Sunflower.Button.Title" parent="Widget.Sunflower.Button">
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="Widget.Sunflower.Button.Dialog" parent="Widget.Sunflower.Button">
        <item name="android:layout_width">@dimen/dialog_button_width</item>
        <item name="android:layout_height">@dimen/dialog_button_height</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="Widget.Sunflower.Button.Dialog.Positive" parent="Widget.Sunflower.Button.Dialog">
        <item name="android:textColor">?android:textColorTertiary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Sunflower.Button.Dialog.Negative" parent="Widget.Sunflower.Button.Dialog">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>


    <style name="Widget.Sunflower.Button.Dialog.Positive.Warning" parent="Widget.Sunflower.Button.Dialog">
        <item name="android:textColor">?android:textColorTertiary</item>
        <item name="backgroundTint">?attr/colorError</item>
    </style>


    <style name="TextAppearance.Sunflower.Dialog.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?android:textColorTertiary</item>
    </style>

<!--    reimplemented in v23/styles-->
    <style name="Widgets.Sunflower.Dialog.Title.Warning" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?android:textColorTertiary</item>
        <item name="android:background">?attr/colorError</item>
        <item name="android:drawableStart">@drawable/ic_warning</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
    </style>

    <style name="TextAppearance.Sunflower.GridHeader.Number" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
    </style>





</resources>